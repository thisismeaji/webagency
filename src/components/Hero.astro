---
import { Store, ArrowRight } from '@lucide/astro';
---

<section>
  <div>
    <h1>Your Website Should Do More Than Just Look Good</h1>
    <p>
      Many businesses have a website, but only a few actually get results. I
      help turn websites into tools that attract, engage, and convert visitors.
    </p>
    <div class="cta">
        <Store size={18}/>
        <input type="text" placeholder="Enter your business name">
        <ArrowRight/>
    </div>
    <span class="circle"></span>
    <span class="circle2"></span>
  </div>
</section>

<style>
  section {
    position: relative;
    padding: 120px 16px;
    width: 100%;
    overflow: hidden;
    background-color: var(--primary);
    z-index: 0;
    color: #ffffff;
    display: flex;
    justify-content:center;
    align-items: center;
  }

  section > div{
    width: 100%;
    max-width: 800px;
    text-align: center;
    display: flex;
    justify-content:center;
    flex-direction: column;
    align-items: center;
  }

  p{
    margin: 16px 0 32px 0;
  }

  .cta{
    display:flex;
    justify-content:center;
    align-items: center;
    gap:16px;
    width:fit-content;
    background-color:var(--secondary);
    padding: 8px;
    border-radius: 5px;
  }

  .cta svg:nth-of-type(1){
    color:#ffffff;
  }

  input{
    background-color:transparent;
    outline:none;
    border:none;
    font-size: 14px;
    font-weight:500;
    padding:4px;
    color:#ffffff;
  }

  .cta svg:nth-of-type(2){
    color:var(--accent);
  }

  .circle,
  .circle2 {
    position: absolute;
    opacity: 0.6;
    z-index: -1;
    will-change: border-radius, transform;
    filter: blur(120px);
  }

  /* BLOB BESAR */
  .circle {
    width: 50%;
    height: 100%;
    background: var(--secondary);
    bottom: -25%;
    right: -25%;

    animation:
      morph 5s ease-in-out infinite,
      breathe 5s ease-in-out infinite;
  }

  /* BLOB KECIL */
  .circle2 {
    width: 26%;
    height: 50%;
    background: var(--accent);
    top: -20%;
    left: -20%;

    animation:
      morphAlt 5s ease-in-out infinite,
      breathe 5s ease-in-out infinite;
  }

  /* ================= */
  /* MORPHING SHAPES */
  /* ================= */

  @keyframes morph {
    0% {
      border-radius: 50% 50% 60% 40% / 50% 60% 40% 50%;
    }
    33% {
      border-radius: 60% 40% 50% 50% / 40% 50% 60% 50%;
    }
    66% {
      border-radius: 40% 60% 45% 55% / 60% 45% 55% 40%;
    }
    100% {
      border-radius: 50% 50% 60% 40% / 50% 60% 40% 50%;
    }
  }

  @keyframes morphAlt {
    0% {
      border-radius: 55% 45% 50% 50% / 45% 55% 50% 50%;
    }
    50% {
      border-radius: 40% 60% 55% 45% / 60% 40% 45% 55%;
    }
    100% {
      border-radius: 55% 45% 50% 50% / 45% 55% 50% 50%;
    }
  }

  /* ================= */
  /* SOFT BREATHING */
  /* ================= */

  @keyframes breathe {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.08);
    }
  }
</style>
